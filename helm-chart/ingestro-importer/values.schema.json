{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ingestro Importer Helm chart values",
  "type": "object",
  "properties": {
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "clusterDomain": {
      "type": "string"
    },
    "global": {
      "type": "object",
      "properties": {
        "imagePullSecrets": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "imageCredentials": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "create": {
              "type": "boolean"
            },
            "registry": {
              "type": "string"
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "externalSecret": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "name": {
                  "type": "string"
                },
                "refreshInterval": {
                  "type": "string"
                },
                "secretStoreRef": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "kind": {
                      "type": "string"
                    }
                  }
                },
                "target": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "creationPolicy": {
                      "type": "string"
                    },
                    "deletionPolicy": {
                      "type": "string"
                    }
                  }
                },
                "data": {
                  "type": "array"
                },
                "dataFrom": {
                  "type": "array"
                }
              }
            }
          },
          "required": ["registry"],
          "allOf": [
            {
              "if": {
                "properties": {
                  "create": {
                    "const": true
                  }
                },
                "required": ["create"]
              },
              "then": {
                "required": ["username", "password"],
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 1
                  },
                  "password": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          ]
        },
        "licenseKey": {
          "type": "string"
        },
        "podAnnotations": {
          "type": "object"
        },
        "extraLabels": {
          "type": "object"
        }
      }
    },
    "importer": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "replicaCount": {
          "type": "integer",
          "minimum": 1
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string",
              "minLength": 1
            },
            "tag": {
              "type": "string",
              "minLength": 1
            },
            "pullPolicy": {
              "type": "string"
            }
          },
          "required": ["repository", "tag"]
        },
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "port": {
              "type": ["integer", "string"]
            }
          }
        },
        "env": {
          "type": "object",
          "properties": {
            "MAPPING_PORT": {
              "type": ["integer", "string"]
            },
            "MAPPING_LLM_PROVIDER": {
              "type": "string",
              "enum": ["", "AZURE", "BEDROCK"],
              "default": ""
            },
            "MAPPING_LLM_TEMPERATURE": {
              "type": ["number", "string"]
            }
          }
        },
        "secretRef": {
          "type": "object",
          "properties": {
            "existingSecret": {
              "type": "string"
            }
          }
        },
        "externalSecret": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "name": {
              "type": "string"
            },
            "refreshInterval": {
              "type": "string"
            },
            "secretStoreRef": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "kind": {
                  "type": "string"
                }
              }
            },
            "target": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "creationPolicy": {
                  "type": "string"
                },
                "deletionPolicy": {
                  "type": "string"
                }
              }
            },
            "data": {
              "type": "array"
            },
            "dataFrom": {
              "type": "array"
            }
          }
        },
        "env": {
          "type": "object"
        },
        "secrets": {
          "type": "object"
        },
        "livenessProbe": {
          "type": "object"
        },
        "readinessProbe": {
          "type": "object"
        }
      }
    },
    "mapping": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          },
          "required": ["repository", "tag"]
        },
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "port": {
              "type": ["integer", "string"]
            }
          }
        },
        "secretRef": {
          "type": "object",
          "properties": {
            "existingSecret": {
              "type": "string"
            }
          }
        },
        "externalSecret": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "name": {
              "type": "string"
            },
            "refreshInterval": {
              "type": "string"
            },
            "secretStoreRef": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "kind": {
                  "type": "string"
                }
              }
            },
            "target": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "creationPolicy": {
                  "type": "string"
                },
                "deletionPolicy": {
                  "type": "string"
                }
              }
            },
            "data": {
              "type": "array"
            },
            "dataFrom": {
              "type": "array"
            }
          }
        },
        "cors": {
          "type": "object",
          "properties": {
            "enable": {
              "type": "boolean"
            },
            "allowOrigin": {
              "type": "string"
            },
            "allowMethods": {
              "type": "string"
            },
            "allowHeaders": {
              "type": "string"
            },
            "allowCredentials": {
              "type": "string"
            }
          }
        }
      }
    },
    "aiService": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          },
          "required": ["repository", "tag"]
        },
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "port": {
              "type": ["integer", "string"]
            }
          }
        },
        "secretRef": {
          "type": "object",
          "properties": {
            "existingSecret": {
              "type": "string"
            }
          }
        },
        "externalSecret": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "name": {
              "type": "string"
            },
            "refreshInterval": {
              "type": "string"
            },
            "secretStoreRef": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "kind": {
                  "type": "string"
                }
              }
            },
            "target": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "creationPolicy": {
                  "type": "string"
                },
                "deletionPolicy": {
                  "type": "string"
                }
              }
            },
            "data": {
              "type": "array"
            },
            "dataFrom": {
              "type": "array"
            }
          }
        }
      }
    },
    "mongo": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "auth": {
          "type": "object",
          "properties": {
            "rootUsername": {
              "type": "string"
            },
            "rootPassword": {
              "type": "string"
            }
          }
        },
        "persistence": {
          "type": "object",
          "properties": {
            "size": {
              "type": "string"
            },
            "storageClass": {
              "type": "string"
            },
            "accessModes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "gateway": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "className": {
          "type": "string"
        },
        "cors": {
          "type": "object",
          "properties": {
            "enable": {
              "type": "boolean"
            },
            "allowOrigin": {
              "type": "string"
            },
            "allowMethods": {
              "type": "string"
            },
            "allowHeaders": {
              "type": "string"
            },
            "allowCredentials": {
              "type": "string"
            }
          }
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string",
                "minLength": 1
              },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string",
                      "minLength": 1
                    },
                    "pathType": {
                      "type": "string"
                    },
                    "useRegex": {
                      "type": "boolean"
                    },
                    "rewriteTarget": {
                      "type": "string"
                    },
                    "service": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "port": {
                          "type": ["integer", "string"]
                        }
                      }
                    }
                  },
                  "required": ["path", "service"]
                }
              }
            },
            "required": ["host", "paths"]
          }
        }
      }
    },
    "mappingGateway": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "className": {
          "type": "string"
        },
        "cors": {
          "type": "object",
          "properties": {
            "enable": {
              "type": "boolean"
            },
            "allowOrigin": {
              "type": "string"
            },
            "allowMethods": {
              "type": "string"
            },
            "allowHeaders": {
              "type": "string"
            },
            "allowCredentials": {
              "type": "string"
            }
          }
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string",
                "minLength": 1
              },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string",
                      "minLength": 1
                    },
                    "pathType": {
                      "type": "string"
                    },
                    "useRegex": {
                      "type": "boolean"
                    },
                    "rewriteTarget": {
                      "type": "string"
                    },
                    "service": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "port": {
                          "type": ["integer", "string"]
                        }
                      }
                    }
                  },
                  "required": ["path", "service"]
                }
              }
            },
            "required": ["host", "paths"]
          }
        }
      }
    }
  },
  "required": ["global"]
}
